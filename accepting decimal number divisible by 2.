#include <iostream>

using namespace std;
bool isDivisible(int num){
    if(num%2 == 0){
        return true;
    }
    return false;
}
int main()
{
    cout<<"Design A Program For Accepting Decimal Number Divisible By 2. "<<endl;
    int num;
    cout<<"Enter The Number You Want To Check : ";
    cin>>num;
    bool isTrue = isDivisible(num);
    if(isTrue){
        cout<<"Your Number Is \"Divisible\" By 2 : "<<num<<endl;
        cout<<"Thank You For Using !!!"<<endl;
    }else{
        cout<<"Your Number Is \"Not Divisible\" By 2 : "<<num<<endl;
        cout<<"Thank You For Not :) Using !!!"<<endl;
    }
    return 0;
}
